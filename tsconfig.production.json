{
  "compilerOptions": {
    "baseUrl": "src",
    "rootDir": "src",
    "outDir": "lib",
    "target": "es2018",
    "module": "commonjs",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": false,
    "allowJs": true,
    "skipLibCheck": true,
    "jsx": "react",
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "typeRoots": [
      "index.d.ts",
      "node_modules/@types"
    ]
  },
  "include": ["./src/**/*.tsx", "./src/**/*.ts"],
  "exclude": [
    "node_modules/**"
  ]
}